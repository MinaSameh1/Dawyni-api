{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "sourceMap": false,
    "outDir": "./build",
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@App/*": [
        "./*"
      ],
      "@db": [
        "./utils/db.ts"
      ]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.jsx",
    "src/**/*.js",
    "src/**/*.json",
    "config/**/*.json"
  ],
  "exclude": [
    "build",
    "**/*.spec.ts"
  ]
}
